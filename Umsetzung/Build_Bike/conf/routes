# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# GET Verlinkungen
GET         /                    controllers.Verlinkung.index()
GET         /index               controllers.Verlinkung.index()
GET         /agb                 controllers.Verlinkung.agb()
GET         /impressum           controllers.Verlinkung.impressum()
GET         /account             controllers.Verlinkung.account()
GET         /konfigurator        controllers.Verlinkung.konfigurator()
GET         /kontakt             controllers.Verlinkung.kontakt()
GET         /login               controllers.Verlinkung.login()
GET         /registrieren        controllers.Verlinkung.registrieren()
GET         /step02              controllers.Verlinkung.step02()
GET         /step03              controllers.Verlinkung.step03()
GET         /step04              controllers.Verlinkung.step04()
GET         /step05              controllers.Verlinkung.step05()
GET         /step06              controllers.Verlinkung.step06()
GET         /step07              controllers.Verlinkung.step07()
GET         /step08              controllers.Verlinkung.step08()
GET         /step09              controllers.Verlinkung.step09()
GET         /step10              controllers.Verlinkung.step10()
GET         /bestellen           controllers.Verlinkung.bestellen()
GET         /warenkorb           controllers.Verlinkung.warenkorb()
# POST Verlinkungen
POST        /login               controllers.User.anmelden()
POST        /kontakt             controllers.Mail.kontaktMail()
POST        /registrieren        controllers.User.registrieren()
POST        /account             controllers.User.logout()

POST        /step02              controllers.KonfigurationsSchritte.setStep01()
POST        /step03              controllers.KonfigurationsSchritte.setStep02()
POST        /step04              controllers.KonfigurationsSchritte.setStep03()
POST        /step05              controllers.KonfigurationsSchritte.setStep04()
POST        /step06              controllers.KonfigurationsSchritte.setStep05()
POST        /step07              controllers.KonfigurationsSchritte.setStep06()
POST        /step08              controllers.KonfigurationsSchritte.setStep07()
POST        /step09              controllers.KonfigurationsSchritte.setStep08()
POST        /step10              controllers.KonfigurationsSchritte.setStep09()
POST        /warenkorb           controllers.KonfigurationsSchritte.setStep10()

POST        /doWarenkorb         controllers.WarenkorbSession.removeKonfiguration()
POST        /bestellen           controllers.WarenkorbSession.bestellen()



# Map static resources from the /public folder to the /assets URL path
GET         /assets/*file        controllers.Assets.at(path="/public", file)
