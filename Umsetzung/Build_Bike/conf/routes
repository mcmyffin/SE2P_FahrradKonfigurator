# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                           controllers.Verlinkung.index()
GET     /index                           controllers.Verlinkung.index()
GET     /agb                           controllers.Verlinkung.agb()
GET     /impressum                           controllers.Verlinkung.impressum()
GET     /account                           controllers.Verlinkung.account()
GET     /konfigurator                           controllers.Verlinkung.konfigurator()
GET     /kontakt                           controllers.Verlinkung.kontakt()
GET     /login                           controllers.Verlinkung.login()
GET     /registrieren                           controllers.Verlinkung.registrieren()
GET     /step02                           controllers.Verlinkung.step02()
GET     /warenkorb                           controllers.Verlinkung.warenkorb()

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.at(path="/public", file)
